<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeadActivity"
    android:background="@drawable/radiant_gradient_2_"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/game_over"
            android:fontFamily="@font/russoone_regular"
            android:textSize="50sp"
            android:textColor="@color/white"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/TV_Pomme"
            android:text=""
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="@color/white"/>
        <Button
            android:text="@string/rejouer"
            android:id="@+id/BT_Rejouer"
            style="@style/ButtonStyle" />
        <Button
            android:text="@string/quitter"
            android:id="@+id/BT_Quitter"
            style="@style/ButtonStyle"/>
    </LinearLayout>



</LinearLayout>